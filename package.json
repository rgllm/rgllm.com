{
  "name": "rgllm.com",
  "version": "5.0.0",
  "private": true,
  "author": {
    "name": "Rogério Moreira",
    "email": "r@rgllm.com",
    "url": "https://rgllm.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rgllm/rgllm.com.git"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "next dev",
    "start": "next dev",
    "prebuild": "pnpm clean && echo All clean ✨",
    "build": "prisma generate --no-engine && next build",
    "start:prod": "next start",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/.eslintcache --ext js,jsx,ts,tsx .",
    "postbuild": "NODE_OPTIONS='--experimental-json-modules' node ./scripts/generate-rss.mjs && node ./scripts/generate-sitemap.mjs",
    "clean": "rimraf ./node_modules/.cache ./server/dist ./build ./public/build \"./app/styles/**/*.css\"",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md)\"",
    "test:unit": "jest",
    "test:e2e": "playwright test"
  },
  "dependencies": {
    "@prisma/client": "5.7.0",
    "@prisma/extension-accelerate": "^0.6.2",
    "@vercel/analytics": "1.1.1",
    "@vercel/og": "0.6.1",
    "axios": "1.6.2",
    "classnames": "2.3.2",
    "date-fns": "2.30.0",
    "himalaya": "1.1.0",
    "html-attribute-to-react": "0.0.5",
    "html-metadata-parser": "2.0.4",
    "next": "^14.0.0",
    "next-auth": "4.24.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "4.12.0",
    "react-to-print": "2.14.15",
    "recharts": "2.10.3",
    "slugify": "1.6.6",
    "swr": "2.2.4",
    "use-delayed-render": "0.0.7"
  },
  "devDependencies": {
    "@playwright/test": "1.40.1",
    "@tailwindcss/typography": "0.5.10",
    "@testing-library/react-hooks": "8.0.1",
    "@types/jest": "29.5.11",
    "@types/node": "20.10.4",
    "@types/react": "18.2.43",
    "autoprefixer": "10.4.16",
    "eslint": "8.55.0",
    "eslint-config-next": "^14.0.0",
    "globby": "14.0.0",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "node-mocks-http": "1.14.0",
    "postcss": "8.4.32",
    "prettier": "3.1.1",
    "prisma": "5.7.0",
    "rss": "1.2.2",
    "tailwindcss": "3.3.6",
    "typescript": "5.3.3"
  }
}
