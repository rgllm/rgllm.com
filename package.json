{
  "name": "rgllm.com",
  "version": "5.0.0",
  "private": true,
  "author": {
    "name": "Rogério Moreira",
    "email": "r@rgllm.com",
    "url": "https://rgllm.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rgllm/rgllm.com.git"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "next dev",
    "start": "next dev",
    "prebuild": "pnpm clean && echo All clean ✨",
    "build": "prisma generate --no-engine && next build",
    "start:prod": "next start",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/.eslintcache --ext js,jsx,ts,tsx .",
    "postbuild": "NODE_OPTIONS='--experimental-json-modules' node ./scripts/generate-rss.mjs && node ./scripts/generate-sitemap.mjs",
    "clean": "rimraf ./node_modules/.cache ./server/dist ./build ./public/build \"./app/styles/**/*.css\"",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md)\"",
    "test:unit": "jest",
    "test:e2e": "playwright test"
  },
  "dependencies": {
    "@prisma/client": "5.16.1",
    "@prisma/extension-accelerate": "^1.0.0",
    "@vercel/analytics": "1.3.1",
    "@vercel/og": "0.6.2",
    "axios": "1.7.2",
    "classnames": "2.5.1",
    "date-fns": "3.6.0",
    "himalaya": "1.1.0",
    "html-attribute-to-react": "0.0.5",
    "html-metadata-parser": "2.0.4",
    "next": "^14.0.0",
    "next-auth": "4.24.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "5.2.1",
    "react-to-print": "2.15.1",
    "recharts": "2.12.7",
    "slugify": "1.6.6",
    "swr": "2.2.5",
    "use-delayed-render": "0.0.7"
  },
  "devDependencies": {
    "@playwright/test": "1.45.0",
    "@tailwindcss/typography": "0.5.13",
    "@testing-library/react-hooks": "8.0.1",
    "@types/jest": "29.5.12",
    "@types/node": "20.14.9",
    "@types/react": "18.3.3",
    "autoprefixer": "10.4.19",
    "eslint": "9.6.0",
    "eslint-config-next": "^14.0.0",
    "globby": "14.0.1",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "node-mocks-http": "1.15.0",
    "postcss": "8.4.39",
    "prettier": "3.3.2",
    "prisma": "5.16.1",
    "rss": "1.2.2",
    "tailwindcss": "3.4.4",
    "typescript": "5.5.2"
  }
}
