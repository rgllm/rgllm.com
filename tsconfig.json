{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "paths": {
      "~/*": [
        "./components/*",
        "./lib/*",
        "./app/*"
      ]
    },
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "strict": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "incremental": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
